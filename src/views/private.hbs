    <div class="bar-music">
            <div class="component-1">
                <img src="https://img.lovepik.com/photo/50042/1067.jpg_wh860.jpg" style="object-fit: cover;" alt="">
                <div class="title">
                    <span class="name" style="color: #FBFBFB;">Chờ Load Xíu Bạn Nhé</span><br>
                    <span class="author" style="color:hsla(0,0%,100%,0.5);">Thành Thông</span>
                </div>
                <div class="icon">
                    <i class="far fa-heart heart"></i>
                    <i class="fas fa-ellipsis-h"></i>
                </div>
            </div>

            <div class="component-2">
                <div class="control" style="text-align: center;">
                    <div class="btn btn-repeat">
                        <i class="fas fa-redo"></i>
                    </div>
                    <div class="btn btn-prev">
                        <i class="fas fa-step-backward"></i>
                    </div>
                    <div class="btn btn-toggle-play">
                        <i class="fas fa-pause icon-pause"></i>
                        <i class="fas fa-play icon-play"></i>
                    </div>
                    <div class="btn btn-next">
                        <i class="fas fa-step-forward"></i>
                    </div>
                    <div class="btn btn-random">
                        <i class="fas fa-random"></i>
                    </div>
                </div>
                <input id="progress" class="progress" type="range" value="0" step="1" min="0" max="100">
            </div>

            <div class="component-3">
                <i class="fab fa-youtube"></i>
                <i class="fas fa-microphone-alt"></i>
                <div class="volume" style="cursor: pointer;">
                    <i class="fas fa-volume-up" id="volume_icon"></i>
                    <input type="range" min="0" max="100" value="100" id="volume" class="progress">
                </div>
                <div class="list-music">
                    <i class="fas fa-drum" style="color: hsla(0, 0%, 100%, 0.5);"></i>
                </div>
            </div>

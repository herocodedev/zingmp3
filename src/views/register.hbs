<div class="app-login">
    <form action="/dangky" method="POST" class="form-login">
            <h3>Register</h3>
            {{#if error}}
                 <p class="err-msg">Confirm Password is incorrect</p>
            {{/if}}
            <div class="form-group">
                <label for="username">Username: </label>
                <input type="text" name="username" id="username" placeholder="Enter username..." required>
            </div>
            <div class="form-group">
                <label for="password">Password: </label>
                <input type="password" name="password" id="password" placeholder="Enter password..." required>
            </div>
            <div class="form-group">
                <label for="password">ConfirmPassword: </label>
                <input type="password" name="confirmPassword" id="confirm-password" placeholder="Enter password..." required>
            </div>
            <div>
                <input type="submit" value="Đăng Ký">
            </div>
    </form>
    <div id="particles">
            <div id="webcoderskull">                    
                
            </div>
    </div>
    <div style="position:relative;margin-left: 12px !important;">
        <a href="/" class="btn btn-primary">Trang Chủ</a>
        <a href="/login" class="btn btn-danger">Đăng Nhập</a>
    </div> 
</div>

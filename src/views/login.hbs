<div class="app-login">
    <form action="/login" method="POST" class="form-login">
            <h3>Login</h3>
            {{#if error}}
                 <p class="err-msg">Username or Password is incorrect</p>
            {{/if}}
            <div class="form-group">
                <label for="username">Username: </label>
                <input type="text" name="username" id="username" placeholder="Enter username..." required>
            </div>
            <div class="form-group">
                <label for="password">Password: </label>
                <input type="password" name="password" id="password" placeholder="Enter password..." required>
            </div>
            <div>
                <input type="submit" value="Login">
            </div>
            <div style="display: flex;flex-direction: column;padding: 0 12px;">
                <a href="/auth/facebook" class="btn btn-primary" style="margin: 12px 0 !important;">
                    <i class="fab fa-facebook"></i>
                Đăng nhập băng facebook
                </a>
                <a href="/auth/google" class="btn btn-danger" style="margin: 12px 0 !important;">
                    <i class="fab fa-google-plus-g"></i>
                Đăng nhập băng google
                </a>
            </div>
            <a href="/dangky" class="btn btn-info" style="position: absolute;">Đăng Kí</a>
    </form>
    
</div>
